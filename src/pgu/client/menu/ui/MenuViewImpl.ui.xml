<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
            xmlns:g="urn:import:com.google.gwt.user.client.ui"
            xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
    
    <g:HTMLPanel>
        <b:Navbar position="TOP">
            <b:Brand>Libros</b:Brand>
            <b:NavSearch ui:field="sTitle" size="3" placeholder="Título" alignment="LEFT"/>        
            <b:NavSearch ui:field="sAuthor" size="2" placeholder="Autor" alignment="LEFT"/>        
            <b:NavSearch ui:field="sEditor" size="2" placeholder="Editor" alignment="LEFT"/>        
            <b:NavSearch ui:field="sCategory" size="2" placeholder="Categoría" alignment="LEFT"/>        
            <b:NavSearch ui:field="sYear" size="1" placeholder="Año" alignment="LEFT"/>        
            <b:NavSearch ui:field="sComment" size="2" placeholder="Comentario" alignment="LEFT"/>        
            <b:Button ui:field="searchBtn" icon="SEARCH">Buscar</b:Button>
            <b:Nav alignment="RIGHT">
                <b:NavLink ui:field="adminBtn">Admin</b:NavLink>
                <b:NavLink ui:field="importBtn">Import</b:NavLink>
                <b:NavLink ui:field="logoutBtn">Log out</b:NavLink>
            </b:Nav>
        </b:Navbar>
        <b:ProgressBar ui:field="progressBar" type="ANIMATED" percent="100"/>
    </g:HTMLPanel>
</ui:UiBinder> 