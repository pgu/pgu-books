<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
            xmlns:g="urn:import:com.google.gwt.user.client.ui"
            xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
    <ui:style>
        .suggestionsRow {
            margin-bottom: 5px;
        }
        .suggestionsFound {
            margin-left: 18px;
        }
        .firstNavbar {
            margin-bottom: 0px;
        }
    </ui:style>
    <g:HTMLPanel>
        <b:Navbar position="TOP" addStyleNames="{style.firstNavbar}">
            <b:Brand>Biblioteca</b:Brand>
            <b:NavSearch ui:field="sText" size="5" placeholder="Cualquier texto" alignment="LEFT"/>        
            <b:Button ui:field="searchSuggestionsBtn" icon="SEARCH">Buscar sugerencias</b:Button>
            <b:Button ui:field="clearSuggestionsBtn" icon="REMOVE">Borrar</b:Button>
            <b:Popover ui:field="suggestionsInfo">
                <b:Button icon="INFO_SIGN" type="INFO"></b:Button>
            </b:Popover>
            <b:Nav alignment="RIGHT">
                <b:NavLink icon="BOOK" ui:field="goToSearchBtn">Biblioteca</b:NavLink>
                <b:NavLink icon="DASHBOARD" ui:field="goToAppstatsBtn">Appstats</b:NavLink>
                <b:NavLink icon="WRENCH" ui:field="goToSetupBtn">Configuración</b:NavLink>
                <b:NavLink icon="UPLOAD" ui:field="goToImportBtn">Import</b:NavLink>
                <b:NavLink icon="OFF" ui:field="logoutBtn">Log out</b:NavLink>
                <b:NavLink icon="USER" ui:field="adminBtn">Admin</b:NavLink>
            </b:Nav>
        </b:Navbar>
        <b:NavPills ui:field="suggestionsContainer" />
        <b:Row addStyleNames="{style.suggestionsRow}">
            <b:Column size="3">
                <b:Label ui:field="suggestionsFound" type="INFO" addStyleNames="{style.suggestionsFound}" />
            </b:Column>
        </b:Row>
        <b:Navbar>
            <b:NavSearch ui:field="sTitle" size="3" placeholder="Título" alignment="LEFT"/>        
            <b:NavSearch ui:field="sAuthor" size="2" placeholder="Autor" alignment="LEFT"/>        
            <b:NavSearch ui:field="sEditor" size="2" placeholder="Editor" alignment="LEFT"/>        
            <b:NavSearch ui:field="sCategory" size="2" placeholder="Categoría" alignment="LEFT"/>        
            <b:NavSearch ui:field="sYear" size="2" placeholder="Año" alignment="LEFT"/>        
            <b:NavSearch ui:field="sComment" size="2" placeholder="Comentario" alignment="LEFT"/>        
            <b:Button ui:field="searchBooksBtn" icon="SEARCH">Buscar libros</b:Button>
            <b:Button ui:field="clearBooksBtn" icon="REMOVE">Borrar</b:Button>
            <b:Popover ui:field="searchInfo">
                <b:Button icon="INFO_SIGN" type="INFO"></b:Button>
            </b:Popover>
        </b:Navbar>
        <b:ProgressBar ui:field="progressBar" type="ANIMATED" percent="100"/>
    </g:HTMLPanel>
</ui:UiBinder> 