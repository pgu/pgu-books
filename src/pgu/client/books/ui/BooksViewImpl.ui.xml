<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
            xmlns:g="urn:import:com.google.gwt.user.client.ui"
            xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
            
    <ui:style>
        .booksFound {
            /* margin-left: 20px; */
            margin-right: 5px;
        }
        .grid {
            margin-top: 15px;
        }
        .actionBtn {
            margin-right: 5px;
        }
    </ui:style>
    <g:HTMLPanel>
        <b:FluidContainer ui:field="toolBar" addStyleNames="{style.grid}" >
            <b:Row>
                <b:Column size="3">
                    <b:Label ui:field="booksFound" type="INFO" addStyleNames="{style.booksFound}" />
                </b:Column>
                <b:Column size="6">
                    <b:Button ui:field="addBtn" icon="PLUS" type="SUCCESS" size="MINI" addStyleNames="{style.actionBtn}">AÃ±adir</b:Button>
                    <b:Button ui:field="editBtn" icon="PENCIL" type="PRIMARY" size="MINI" addStyleNames="{style.actionBtn}">Editar</b:Button>
                    <b:Button ui:field="deleteBtn" icon="TRASH" type="DANGER" size="MINI" addStyleNames="{style.actionBtn}">Borrar</b:Button>
                    <b:Button ui:field="refreshBtn" icon="REFRESH" type="DEFAULT" size="MINI" addStyleNames="{style.actionBtn}">Refrescar</b:Button>
                </b:Column>
                <b:Column size="3" ui:field="colBadges">
                </b:Column>
            </b:Row>
        </b:FluidContainer>
        <b:FluidContainer ui:field="booksGrid" addStyleNames="{style.grid}" />
        <b:Pagination ui:field="pager" alignment="CENTERED" />
    </g:HTMLPanel>
</ui:UiBinder> 