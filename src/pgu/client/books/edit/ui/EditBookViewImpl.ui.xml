<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
    
    <g:HTMLPanel>
        <b:Modal ui:field="container" backdrop="STATIC" keyboard="true" animation="true">
            <b:ProgressBar ui:field="progressBar" type="ANIMATED" percent="100"/>
            <g:HTMLPanel ui:field="notification" />
            <b:WellForm>
                <b:ControlLabel>Título</b:ControlLabel>
                <b:TextBox ui:field="titleBox" placeholder="Título"/>
                <b:ControlLabel>Autor</b:ControlLabel>
                <b:TextBox ui:field="authorBox" placeholder="Autor"/>
                <b:ControlLabel>Editor</b:ControlLabel>
                <b:TextBox ui:field="editorBox" placeholder="Editor"/>
                <b:ControlLabel>Categoría</b:ControlLabel>
                <b:TextBox ui:field="categoryBox" placeholder="Categoría"/>
                <b:ControlLabel>Año</b:ControlLabel>
                <b:TextBox ui:field="yearBox" placeholder="Año"/>
                <b:ControlLabel>Comentario</b:ControlLabel>
                <b:TextBox ui:field="commentBox" placeholder="Comentario"/>
            </b:WellForm>
            <b:ModalFooter>
                <b:Button ui:field="cancelBtn" icon="UNDO" iconSize="LARGE" >Anular modificaciones</b:Button>
                <b:Button ui:field="saveBtn" icon="FILE" iconSize="LARGE" type="PRIMARY">Guardar</b:Button>
            </b:ModalFooter>
        </b:Modal>
    </g:HTMLPanel>
</ui:UiBinder> 